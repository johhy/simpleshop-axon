<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%30.20logger - %msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="org.springframework" level="OFF">
	</logger>
	
	<logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" level="OFF">
	</logger>
	
	<logger name="org.axonframework" level="OFF">
	</logger>
	
	<logger name="org.axonframework.unitofwork.NestableUnitOfWork" level="OFF">
	</logger>
	
	<logger name="org.hibernate.validator" level="OFF">
	</logger>
	

	<logger name="com.github.johhy" level="DEBUG">
	</logger>
	
	<root level="OFF">
		<appender-ref ref="STDOUT"/>
	</root>
	
</configuration>